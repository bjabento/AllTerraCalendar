    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css">
    <link rel="stylesheet" href="styles.css" type="text/css">

    <title>Calendário</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <a class="navbar-brand" href="/index">
            <img src="images/logo.jpeg" width="220" height="40" class="d-inline-block align-top" alt="">
        </a>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <button class="btn btn-default" style="background-color: transparent; color: white !important;" onmouseover="this.style.backgroundColor='goldenrod'; this.style.color='black';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='white';" onclick="location.href='/userHolidays'">Ver Férias</button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-default" style="background-color: transparent; color: white !important;" onmouseover="this.style.backgroundColor='goldenrod'; this.style.color='black';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='white';" onclick="location.href='#'">Tickets</button>
                </li>
               
                <li class="nav-item dropdown">
                    <button class="nav-link dropdown-toggle btn btn-default" style="background-color: transparent; color: white !important;" onmouseover="this.style.backgroundColor='goldenrod'; this.style.color='black';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='white';" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> 
                       
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <!--<a type="submit" class="dropdown-item" id="logoutButton" href="logout">Logout <i class="fas fa-door-open"></i></a>-->
                        <a class="dropdown-item" href="/logout">Logout <i class="fas fa-door-open"></i></a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <!--<h1>Calendário</h1>-->
        <div id="calendar"></div>
    </div>

    <div class="modal fade" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="requestModalLabel">Solicitar feriado</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/holidayRequest" method="POST">
                        <div class="form-group">
                            <label for="name">Nome do feriado</label>
                            <input type="text" class="form-control" id="notes" name="notes"
                                placeholder="Digite o nome do feriado" required>
                        </div>
                        <div class="form-group">
                            <label for="startDate">Data de início</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        <div class="form-group">
                            <label for="endDate">Data de término</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                        </div>
                        <button onclick="sendRequest()" class="btn btn-primary">Enviar solicitação</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>© 2023 All rights reserved.</p>
    </footer>
</body>

</html>