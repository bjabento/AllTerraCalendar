<!DOCTYPE html>
<html>
<head>
  <title>Calendarização de Férias</title>
  <script src="/js/calendar.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css" type="text/css">
</head>

<body>
  <nav class="navbar navbar-expand-lg fixed-top">
    <a class="navbar-brand" href="/index">
        <img src="images/logo.jpeg" width="220" height="40" class="d-inline-block align-top" alt="">
    </a>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item">
                <button class="btn btn-default" style="background-color: transparent; color: white !important;" onmouseover="this.style.backgroundColor='goldenrod'; this.style.color='black';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='white';" onclick="location.href='/markholiday'">Marcar Férias</button>
            </li>
            <li class="nav-item">
                <button class="btn btn-default" style="background-color: transparent; color: white !important;" onmouseover="this.style.backgroundColor='goldenrod'; this.style.color='black';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='white';" onclick="location.href='#'">Tickets</button>
            </li>
           
            <li class="nav-item dropdown">
                <button class="nav-link dropdown-toggle btn btn-default" style="background-color: transparent; color: white !important;" onmouseover="this.style.backgroundColor='goldenrod'; this.style.color='black';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='white';" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> 
                   
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    <!--<a type="submit" class="dropdown-item" id="logoutButton" href="logout">Logout <i class="fas fa-door-open"></i></a>-->
                    <a class="dropdown-item" href="/logout">Logout <i class="fas fa-door-open"></i></a>
                </div>
            </li>
        </ul>
    </div>
</nav>

  <div class="container mt-5">
    <h2>Histórico de Férias</h2>
    <table id="holidayTable" class="table">
      <thead>
        <tr>
          <th>Periodo de Férias</th>
          <th>Notas</th>
          <th>Estado do Pedido</th>
        </tr>
      </thead>
      <tbody>
        <% var itemsPerPage = 10; %>
        <% var startIdx = (currentPage - 1) * itemsPerPage; %>
        <% var endIdx = startIdx + itemsPerPage; %>
        <% for (let i = startIdx; i < endIdx && i < holidays.length; i++) { %>
          <tr id="row<%= holidays[i].id %>">
            <td><%= moment(holidays[i].dataValues.start_date).format('DD-MM-YYYY') %> / <%= moment(holidays[i].dataValues.end_date).format('DD-MM-YYYY') %></td>
            <td><%= holidays[i].dataValues.notas %></td>
            <td><%= holidays[i].dataValues.status %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a class="btn btn-default" href="userHolidays?page=<%= currentPage - 1 %>">&laquo; Previous</a>
      <% } %>
  
      <% if (endIdx < holidays.length) { %>
        <a class="btn btn-default-next" href="userHolidays?page=<%= currentPage + 1 %>">Next &raquo;</a>
      <% } %>
    </div>
  </div>
</body>
</html>